{
  "$schema": "https://json.schemastore.org/tsconfig",
  "buildOptions": {
    "incremental": true
  },
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "sourceRoot": "./src",
    "target": "ES2022"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src",
    "tests/**/*"
  ],
  "typeAcquisition": {
    "enable": true
  }
}
