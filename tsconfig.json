{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"rootDirs": [
			"src",
			"tests"
		],
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"inlineSources": false,
		"lib": [
			"ES2022",
			"DOM"
		],
		"module": "NodeNext",
		"target": "ES2022",
		"isolatedModules": true,
		"strict": true,
		"inlineSourceMap": true
	},
	"include": [
		"src/**/*",
		"tests/**/*"
	],
	"exclude": [
		"dist"
	]
}
